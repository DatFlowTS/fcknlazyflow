#!/bin/bash

# This script loops through all cloned REPOS
# in your GITROOT and pushes the repo defined
# as argument. 
#
# Intentionally it's meant to be used as a cronjob.
#
# Edit the following variable to match your purposes:
GITROOT=$HOME/dev
LOG=$GITROOT/LOGS
#
# ---------------------------------
# ---------------------------------
#
# DO NOT EDIT FROM HERE ANYMORE!
#
# ---------------------------------
# ---------------------------------
#
REPOS=$(ls $GITROOT)
if [ $# -eq 0 ] | [ -z "$1" ]; then
	echo "No argument supplied!"
	exit 1
elif [ $# -eq 1 ] | [ ! -z "$1" ]; then
	if [[ "$1" = "any" ]]; then
		for d in ${REPOS}; do
			echo "" | tee -a ${LOG}/push-${d}.log
			echo '------------########################------------' >> ${LOG}/push-${d}.log
			echo '------------########################------------' >> ${LOG}/push-${d}.log
			echo "$(date)" >> ${LOG}/push-${d}.log
			echo "" >> ${LOG}/push-${d}.log
			echo "-----"
			echo "pushing repo: ${GITROOT}/$d" | tee -a ${LOG}/push-${d}.log
			cd $GITROOT/$d/
			git push | tee -a ${LOG}/push-${d}.log
			cd
			echo "DONE!" | tee -a ${LOG}/push-${d}.log
			echo "-----"
			echo "" | tee -a ${LOG}/push-${d}.log
		done
	else 	
		for d in ${REPOS}; do
			if [[ "$1" = "$d" ]]; then
				echo "" | tee -a ${LOG}/push-${d}.log
				echo '------------########################------------' >> ${LOG}/push-${d}.log
				echo '------------########################------------' >> ${LOG}/push-${d}.log
				echo "$(date)" >> ${LOG}/push-${d}.log
				echo "" >> ${LOG}/push-${d}.log
				echo "-----"
				echo "pushing repo: ${GITROOT}/$d" | tee -a ${LOG}/push-${d}.log
				cd $GITROOT/$d/
				git push | tee -a ${LOG}/push-${d}.log
				cd
				echo "DONE!" | tee -a ${LOG}/push-${d}.log
				echo "-----"
				echo "" | tee -a ${LOG}/push-${d}.log
			else 
				echo "-----"			
				echo "skipping repo: ${GITROOT}/$d"
				echo "-----"
				echo ""
			fi
		done
	fi
	exit 0
else
	echo "Too many arguments!"
	exit 1
fi
